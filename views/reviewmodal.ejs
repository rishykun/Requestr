<!-- Review Modal -->
<div class="modal fade" id="review-modal" tabindex="-1" role="dialog" aria-labelledby="message-modal-label">
	<div class="modal-dialog modal-sm" role="document" style="width:75%">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="message-label">Review Another User</h4>
			</div>
			<div class="modal-body">
				<form class="review-form">
					<div class="form-group">
						<label for="review-victim">Select a Participant:</label>
						<select class="form-control" id="review-victim">
							
						</select>
					</div>
					<div class="form-group">
						<label for="review-rating">Rate the Participant out of 5:</label>
						<select class="form-control" id="review-rating">
							<option>1</option>
						    <option>2</option>
						    <option id="review-rating-default" selected="selected">3</option>
						    <option>4</option>
						    <option>5</option>
						</select>
					</div>
					<div class="form-group">
						<label for="review-text">Further Comments:</label>
						<textarea class="form-control" rows="5" id="review-text"></textarea>
					</div>
					<button type="submit" class="btn btn-default">Submit Review</button>
					<div id="review-success"></div>
					<div style="color: red" id="review-error"></div>
				</form>
			</div>
		</div>
	</div>
</div>